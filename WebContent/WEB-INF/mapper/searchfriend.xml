<!-- 	</select> -->
	
	<!-- 페이지처리 -->
	<select id="page" resultType="java.util.HashMap" parameterType="java.util.HashMap">
		<![CDATA[
			select temp.* from(select rownum rnum, r.* from member r where #{ctg} = #{ctg2} order by id asc )
			temp where temp.rnum >= #{start} and temp.rnum <= #{end}
		]]>
	</select>
	
	<select id="total" resultType="java.lang.Integer">
		select count(*) from member
	</select>
</mapper>